<div class="gymdetail">
<div class="container-fluid">
  <div class="row">
    <h1><%=Gym.name%><br></h1>
    <p>description:<%=Gym.description%><br></p>
    <p>capacity:<%=Gym.capcity%></li></p>
  <% if(currentUser == Gym.user){%>
    <button class="btn btn-warning"><a href="/gym/<%= Gym._id %>/edit">Edit</a></button>
    <form class="deleteForm "method="POST" action=<%= "/gym/" + Gym._id + "?_method=DELETE" %> >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        <%}%>

  </div>
</div>
</div>
<button><a href="/gym/<%= Gym._id %>/review/new">Add Review</a></button>
<% Gym.review.forEach(function(review){ %>
  <p><%- review.author.name%></p>
  <p><%- review.title%></p>
  <p><%- review.description%></p>
  <p><%- review.rating%></p><br>

  <% if(currentUser == review.author.id){%>
  <button class="btn btn-warning"><a href="/gym/<%= Gym._id %>/review/<%= review._id %>/edit">
  Edit Review </a></button><br>
  <form class="deleteForm "method="POST"
  action= "/gym/<%= Gym._id %>/review/<%= review._id%>?_method=DELETE">
          <button type="submit" class="btn btn-danger">Delete Review</button>
<% } %>
<%})%>
